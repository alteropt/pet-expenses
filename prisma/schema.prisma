generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===== AUTH MODELS =====
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  fullname  String
  password  String
  createdAt DateTime  @default(now())
  expenses  Expense[]
}

// ===== EXPENSES MODELS =====
model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  expenses Expense[]
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  date        DateTime
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
}
