generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  fullname  String
  password  String
  createdAt DateTime  @default(now())
  expenses  Expense[]
}

model Expense {
  id        String   @id @default(uuid())
  title     String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
